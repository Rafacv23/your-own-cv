---
import { Link } from "@nextui-org/react"
import { Divider } from "@nextui-org/divider"
import { AiFillGithub, AiFillLinkedin, AiFillHeart } from "react-icons/ai"
import { SiKofi } from "react-icons/si";
import { MdOutlineWork } from "react-icons/md"
---

    <footer class="flex flex-col items-center w-full justify-center py-4 border-t border-t-gray-800 rounded-xl gap-4">
      <div class="flex gap-8">
        <section>
          <h4 class="text-lg font-semibold">Contenido</h4>
          <ul>
            <li>
              <Link
                href="/"
                title="Inicio"
                isBlock
                color="secondary"
              >
                Inicio
              </Link>
            </li>
            <li>
              <Link
                href="/create"
                title="Crear"
                isBlock
                color="secondary"
              >
                Crear
              </Link>
            </li>
            <li>
              <Link
                href="/example"
                title="Ejemplo"
                isBlock
                color="secondary"              >
                Ejemplo
              </Link>
            </li>
          </ul>
        </section>
        <Divider orientation="vertical" />
        <section>
          <h4 class="text-lg font-semibold">Contacto</h4>
          <ul>
            <li>
              <Link
                href="https://github.com/Rafacv23/your-own-cv"
                title="Repositorio de Github"
                target="blank"
                isBlock
                color="secondary"      
                className="flex gap-2 items-center"      
                >
                <AiFillGithub />
                Github
              </Link>
            </li>
            <li>
              <Link
                href="https://www.linkedin.com/in/rafa-canosa-vallejo-6328a5194/"
                title="Rafa Canosa Linkedin"
                target="blank"
                isBlock
                color="secondary"       
                className="flex gap-2 items-center"      
                >
                <AiFillLinkedin />
                Linkedin
              </Link>
            </li>
            <li>
              <Link
                href="https://ko-fi.com/rafacanosa"
                title="Buy me a coffee"
                target="blank"
                isBlock
                color="secondary"       
                className="flex gap-2 items-center"      
                >
                <SiKofi />
                Buy me a coffee
              </Link>
            </li>
            <li>
              <Link
                href="https://rafa-canosa-portfolio.vercel.app/"
                title="Rafa Canosa Portfolio"
                target="blank"
                isBlock
                color="secondary"        
                className="flex gap-2 items-center"      
                >
                <MdOutlineWork />
                Portfolio
              </Link>
            </li>
          </ul>
        </section>
      </div>
      <h5 class="flex items-center gap-2">
        Creado con <AiFillHeart /> por Rafa Canosa
      </h5>
    </footer>

    <style>
      a{
        color: white;
      }
    </style>
